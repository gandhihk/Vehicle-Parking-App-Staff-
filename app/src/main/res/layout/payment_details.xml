<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PaymentDetails">

    <TextView
        android:id="@+id/payment_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Payment Details"
        android:textSize="22sp"
        android:textColor="#000"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:visibility="gone"
        android:padding="3dp"
        android:background="@drawable/table_cell"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:padding="7dp"
                android:text="Booking ID"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/booking_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:gravity="center_horizontal"
                android:text=""
                android:background="#FFF"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Level Number"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/level_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Slot Number"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/slot_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Entry Time"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/entry_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Exit Time"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/exit_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Duration"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Total Fare"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/fare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Transaction ID"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/transaction_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Mode of payment"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/payment_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="1dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Payment Status"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:textSize="17sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/payment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#000"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:text="Verify Payment"
        android:onClick="verify"
        android:textColor="@color/white"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/verified_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/verified"
        android:visibility="gone" />

    <TextView
        android:id="@+id/successful_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Payment successfully verified."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="gone" />
</LinearLayout>